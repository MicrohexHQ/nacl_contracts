Import('env')

read_ledger_libs = ['srpc', 'platform', 'gio', 'imc', 'imc_syscalls']

read_ledger_obj = env.ComponentObject('read_ledger.o', 'read_ledger.c')
read_ledger_nexe_name = 'read_ledger_%s' % env.get('TARGET_FULLARCH')
read_ledger_nexe = env.ComponentProgram(read_ledger_nexe_name,
                                    read_ledger_obj,
                                    EXTRA_LIBS=read_ledger_libs + [
                                        '${PTHREAD_LIBS}'])

env.Publish(read_ledger_nexe_name, 'run',
            ['read_ledger.html',
             'read_ledger_data.html'])

read_ledger_nonbrowser = env.ComponentProgram('read_ledger_nonbrowser',
                                           read_ledger_obj,
                                           EXTRA_LIBS=read_ledger_libs + [
                                               '${PTHREAD_LIBS}',
                                               '${NONIRT_LIBS}'])

node = env.SelUniversalTest(
    'read_ledger_test.out',
    read_ledger_nonbrowser,
    stdout_golden=env.File('read_ledger_test.stdout'),
    )
env.AddNodeToTestSuite(node,
                       ['small_tests'],
                       'run_read_ledger_test')
